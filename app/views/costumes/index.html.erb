<%- model_class = Costume -%>
<div class="page-header">
  <h1><%= @character.name %> costumes</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:number) %></th>
      <th><%= model_class.human_attribute_name(:pic_official) %></th>
      <th><%= model_class.human_attribute_name(:pic_ingame) %>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @costumes.each do |costume| %>
      <tr>
        <td><%= link_to costume.number, character_costume_path(@character, costume) %></td>
        <td><%= image_tag costume.pic_official(:thumb) %></td>
        <td><%= image_tag costume.pic_ingame(:thumb) %></td>
        <td><%=l costume.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_character_costume_path(@character, costume), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      character_costume_path(@character, costume),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_character_costume_path(@character),
            :class => 'btn btn-primary' %>
