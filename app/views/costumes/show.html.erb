<%- model_class = Costume -%>
<div class="page-header">
  <h1><%=t '.title', :default => @costume.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
  <dd><%= @costume.number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pic_official) %>:</strong></dt>
  <dd><%= image_tag @costume.pic_official.url(:medium) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pic_ingame) %>:</strong></dt>
  <dd><%= image_tag @costume.pic_ingame.url(:medium) %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              character_costumes_path(@character), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_character_costume_path(@character, @costume), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              character_costume_path(@character, @costume),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
